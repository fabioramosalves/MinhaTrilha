package classe;

public class Produto {

	String nome;
	double preco;
	double desconto;

	Produto() {
	}

	Produto(String nomeInicial) {
		nome = nomeInicial;
	}
	
	Produto(String nomeInicial, double precoInicial) {
		nome = nomeInicial;
		preco = precoInicial
	}

	public double precoComDesconto() {
		return preco * (1 - desconto);
	}
}
