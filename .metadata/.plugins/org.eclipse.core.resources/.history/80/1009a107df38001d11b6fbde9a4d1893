package oo.composicao;

public class Item {

	String nome;
	int quantidade;
	double preco;
	
	Item(String nome, int quantidade, double preco){
		this.nome = nome;
		this.quantidade = quantidade;
		this.preco = preco;
	}
	
	public String toString() {
		return String.format("%s %.df %d total %.2f", nome,preco,quantidade, preco * quantidade );
	}
}
