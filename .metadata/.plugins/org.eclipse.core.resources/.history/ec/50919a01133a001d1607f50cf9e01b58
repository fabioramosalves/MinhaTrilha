package lambdas;

public class Produto extends Object{

	final String nome;
	final double preco;
	final double desconto;

	public Produto(String nome, double preco, double desconto) {
		this.nome = nome;
		this.preco = preco;
		this.desconto = desconto;
	}
	
	public String toString() {
		return String.format("Nome: %s Pre√ßo: %.2f Desconto: %.2f", 
				this.nome, 
				this.preco,
				this.desconto);
	}
}
