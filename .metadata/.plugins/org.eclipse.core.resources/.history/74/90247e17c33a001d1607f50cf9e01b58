package streamAPI;

import java.util.Arrays;
import java.util.List;
import java.util.function.Function;

public class DesafioMap {

	public static void main(String[] args) {

		List<Integer> nums = Arrays.asList(1, 2, 3, 4, 5, 6, 7, 8, 9);

		/*
		 * 1. Número para string binária... 6=> "110" 
		 * 2. Reverter a string... "110" =>	 * "011" 
		 * 3. Converter de volta para inteiro => 3
		 */

		Function<Integer, String> numStrBi = n -> Integer.toBinaryString(n);
		
		String teste = new StringBuilder("110").reverse().toString();
		
		UnaryOperator<String> reverter = s -> new StringBuilder(s).reverse().toString();
		
		Function<String,Integer> convertInt = n -> Integer.parseInt(n);
		
		System.out.println(teste);

	}
}
