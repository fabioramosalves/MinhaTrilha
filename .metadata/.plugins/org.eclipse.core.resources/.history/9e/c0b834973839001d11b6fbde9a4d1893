package oo.composicao.desafio;

public class CompraTeste {

	public static void main(String[] args) {
		Produto produto1 = new Produto("Caneta", 4.55);
		Produto produto2 = new Produto("Lapis", 2.40);

		Cliente cliente1 = new Cliente("Fabio");

		Compra compra1 = new Compra();

		compra1.adicionarItem(produto1,10);
		compra1.adicionarItem(produto2,10);
		
		cliente1.addCompra(compra1);

		System.out.printf("Total R$ %.2f" , cliente1.totalCompras());
	}
}
