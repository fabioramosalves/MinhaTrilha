package oo.polimorfismo;

public class Pessoa {

	private double peso;

	public Pessoa(double peso) {
		setPeso(peso);
	}

	public double getPeso() {
		return peso;
	}

	public void setPeso(double peso) {
		if (peso >= 0)
			this.peso = peso;
	}

	public void commer(Arroz arroz) {
		this.peso = arroz.getPeso();
	}

	public void commer(Feijao feijao) {
		this.peso = feijao.getPeso();
	}

	public void commer(Sorvete sorvete) {
		this.peso = sorvete.getPeso();
	}
}
