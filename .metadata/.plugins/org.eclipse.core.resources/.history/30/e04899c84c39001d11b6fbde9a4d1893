package oo.heranca;

public class Jogador {

	int x;
	int y;
	
	public boolean andar(Direcao direcao) {
		
		if(direcao.equals(direcao.Norte)) {
			y++;
		}
		
		if(direcao.equals(direcao.Sul)) {
			y--;
		}
		
		if(direcao.equals(direcao.Leste)) {
			x++;
		}
		
		if(direcao.equals(direcao.Oeste)) {
			x--;
		}
		
		return true;
	}
}
