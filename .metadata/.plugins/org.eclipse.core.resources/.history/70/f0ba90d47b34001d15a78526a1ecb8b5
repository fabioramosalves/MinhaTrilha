package classe.desafio;

import classe.Comida;

public class Pessoa {

	String nome;
	double peso;

	Pessoa(String nome, double peso) {
		this.nome = nome;
		this.peso = peso;
	}

	void comer(Comida comida) {
		if (comida != null)
			this.peso += comida.peso;
	}
	
	String apresentar() {
		return String.format("%s %.4f Kgs\n", this.nome, this.peso );
	}
}
