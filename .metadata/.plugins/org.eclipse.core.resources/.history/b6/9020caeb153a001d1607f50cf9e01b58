package lambdas;

import java.util.function.Function;

public class Funcao {

	public static void main(String[] args) {
		Function<Integer, String> parOuImpar = p -> p % 2 == 0 ? "Par" : "Impar";

		System.out.println(parOuImpar.apply(3));
		System.out.println(parOuImpar.apply(4));

		Function<String, String> oResultadoE = n -> "O resultado Ã©: " + n;
		
		String resultadoFinal = parOuImpar.apply(22);

		System.out.println(oResultadoE(resultadoFinal));
	}
}
