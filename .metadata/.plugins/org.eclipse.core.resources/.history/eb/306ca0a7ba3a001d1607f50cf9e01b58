package streamAPI;

import java.util.Arrays;
import java.util.List;
import java.util.function.Consumer;
import java.util.function.UnaryOperator;
import java.util.stream.Stream;

public class Map {

	public static void main(String[] args) {

		/*
		Consumer<Integer> printInt = System.out::println;
		Stream<Integer> mapInt = Stream.of(10, 20, 30);
		mapInt.map(x -> x * x).forEach(printInt);
		 */
		
		// ------------ exemplo da aula-------------------
		
		Consumer<String> printString = System.out::print;

		List<String> marcas = Arrays.asList("BMW ", "Audi ", "Honda ");	
		marcas.stream().map(m -> m.toUpperCase()).forEach(printString);
		
		UnaryOperator<String> maiuscula = n -> n.toUpperCase();
		UnaryOperator<String> primeiraLetra = n -> n.charAt(0) + "";
		UnaryOperator<String> grito = n -> n + "!!!";
		
		System.out.println("\n\nUsando composição!\n");
		
		marcas.stream()
		.map(maiuscula)
		.forEach(printString);

	}
}
