package oo.composicao;

import java.util.List;

public class Carro {

	final Motor motor;
	List<Porta> portas;

	Carro() {
		motor = new Motor(this);
		portas.add(new Porta("DianteiraDireita"));
		portas.add(new Porta("DianteiraEsquerda"));
		portas.add(new Porta("TrazeiraDireita"));
		portas.add(new Porta("TrazeiraEsquerda"));
	}

	boolean acelerar() {
		if (motor.fatorInjecao < 2.5) {
			motor.fatorInjecao += 0.4;
			return true;
		}
		return false;
	}

	boolean frear() {
		if (motor.fatorInjecao > 0.5) {
			motor.fatorInjecao -= 0.4;
			return true;
		}
		return false;
	}

	void ligar() {
		motor.ligado = true;
	}

	void desligar() {
		motor.ligado = false;
	}

	boolean estaLigado() {
		return motor.ligado;
	}
}
