package streamAPI;

import java.util.function.Consumer;
import java.util.function.Function;
import java.util.function.UnaryOperator;

public class Utilitarios {

	private Utilitarios() {

	}

	public final static UnaryOperator<String> maiuscula = n -> n.toUpperCase();
	
	public final static UnaryOperator<String> minuscula = n -> n.toLowerCase();
	
	public final static UnaryOperator<String> primeiraLetra = n -> n.charAt(0) + "";

	public final static String grito(String n) {
		return n + "!!!";
	}

	public final static Consumer<String> printOutString = System.out::print;

	public final static Consumer<Integer> printOutInt = System.out::print;

	public final static Consumer<Integer> printlnOutInt = System.out::println;

	//desefio Map
	public final static Function<Integer, String> intToBinary = n -> Integer.toBinaryString(n);

	public final static UnaryOperator<String> revertString = s -> new StringBuilder(s).reverse().toString();

	public final static Function<String, Integer> convertBynaryToInt = n -> Integer.parseInt(n, 2);
}
