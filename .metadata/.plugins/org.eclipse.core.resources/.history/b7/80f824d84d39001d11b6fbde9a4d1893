package oo.heranca;

public class Jogador {

	int x;
	int y;
	
	boolean andar(Direcao direcao) {
		
		switch(direcao){
			case Norte:
				y++;
				break;
		}
		
		if(direcao == direcao.Norte) {
			y++;
		}
		
		if(direcao == direcao.Sul) {
			y--;
		}
		
		if(direcao == direcao.Leste) {
			x++;
		}
		
		if(direcao == direcao.Oeste) {
			x--;
		}
		
		return true;
	}
}
