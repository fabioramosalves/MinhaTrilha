	void addCompras(Compra compra){
		this.compras.add(compra);
	}
	
	double totalCompras() {
		double total = 0.0;;
		
		for (Compra compra : compras) {

			for (Item item : compra.itens) {
				
			}
		}
		
		return total;
	}
}